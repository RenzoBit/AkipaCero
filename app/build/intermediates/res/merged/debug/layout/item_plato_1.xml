    android:orientation="vertical" >
        <TextView
        android:id="@+id/textViewIde"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/textViewId"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/textViewId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/textViewId"
        android:visibility="gone"/>
